  <script>
    let geojsonCache = null;

    const csrfTokenTemplate = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

    async function initGeoJSON() {
      try {
        const cached = localStorage.getItem('geojson-data');
        if (cached) {
          geojsonCache = JSON.parse(cached);
          return;
        }

        const response = await fetch('/geojson', {
          method: 'POST',
          headers: {
            'X-CSRFToken': csrfTokenTemplate,
            'Content-Type': 'application/json',
          },
        });

        if (!response.ok) throw new Error('Respon server tidak OK');

        const data = await response.json();
        geojsonCache = data;
        localStorage.setItem('geojson-data', JSON.stringify(data));

      } catch (error) {
        console.error('[GeoJSON] Gagal memuat data:', error);
        geojsonCache = null; // fallback
      }
    }

    document.addEventListener('DOMContentLoaded', async () => {
      await initGeoJSON(); // tunggu selesai load
    });
  </script>
